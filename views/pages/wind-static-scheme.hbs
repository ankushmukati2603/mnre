<div class="_page_head wind-bg">
    <p class="_heading">Wind Schemes</p>
</div>
<div class="_main_wrapper">
    <div class="_policy_wrapper">
        <!-- Accordion -->
        <div class="_policy_accordion">
            <ul class="nav nav-tabs wind-tabs" id="myTab" role="tablist">
                {{!-- <li class="nav-item">
                    <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#home" role="tab"
                        aria-controls="profile" aria-selected="false">Schemes</a>
                </li> --}}
                <li class="nav-item" style="width: 100%;">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="home"
                        aria-selected="true">Guidelines</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                {{!-- <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab"></div> --}}
                <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="accordion" id="accordionExample">
                        {{#each schemes}}
                            <div class="card">
                                <div class="card-header" id="headingOne">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link" type="button" data-toggle="collapse"
                                            data-target="#collapse_{{@index}}" aria-expanded="true" aria-controls="collapseOne">
                                            {{this.title}}
                                        </button>
                                    </h2>
                                </div>

                                <div id="collapse_{{@index}}" class="collapse" aria-labelledby="headingOne"
                                    data-parent="#accordionExample">
                                    <div class="card-body">
                                        {{{this.content}}}
                                        <div class="_pdf_links">
                                            <a target="_blank" href="{{this.pdf_hi}}" class="ml-1">
                                                <img class="pdf" src="{{../site_url}}/img/view-pdf.png" alt="view">
                                            </a>
                                            <a data-href="{{this.pdf_hi}}" class="ml-1 download_file">
                                                <img class="pdf" src="{{../site_url}}/img/download-pdf.png" alt="view">
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>  
                        {{/each}}  
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>