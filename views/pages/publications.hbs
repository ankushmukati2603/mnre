<div class="container-fluid policies mb-5 knowledge_center_bg">
    <h1 class="text-center wdet knowledge_center_bg">{{{page_title}}}</h1>
</div>

{{#if overview}}
<div class="container-fluid">
    <div class="hdpart">
        <div class="col-sm-12 mt-3 overview__text">
            <div class="margin_boo">
                {{{overview}}}
            </div>
        </div>

    </div>
</div>
{{/if}}

<div class="_policy_wrapper">
    <div class="_policy_dropdown">
        <div class="search-option">
            <p style="font-family: 'Gotham-Bold'; right: 100px; font-size: 14px; color: #464646; position: absolute; top: 1px; left: 1px; pointer-events: none; margin: 0; background: white; bottom: 1px; padding: 9px 15px; z-index: 10;">{{page_title}}</p>
            <label for="f184318d184322" class="sr-only">Format</label>
            <select title="Format" id="f184318d184322" name="documentType_" class="form-control"
                onChange="window.location.href=this.value">
                <option value="">Choose Option</option>
                <option value="{{site_url}}/knowledge-center/reports">Reports</option>
                <option value="{{site_url}}/knowledge-center/publication">Publications</option>
                <option value="{{site_url}}/knowledge-center/articles">Articles</option>
                <option value="{{site_url}}/knowledge-center/videos">Videos</option>
                <option value="{{site_url}}/knowledge-center/images">Images</option>
                <option value="{{site_url}}/knowledge-center/infographics">Infographics</option>
                <option value="{{site_url}}/knowledge-center/presentations">Presentations</option>
                {{!-- <option value="/knowledge-center/training">Training Module</option>                    
                    <option value="/knowledge-center/case-studies">Case Studies</option>--}}
            </select>
        </div>
    </div>
    <!-- Accordion -->
    {{#if articles}}
    <div class="_policy_accordion">
        <ul class="nav nav-tabs publication-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="home-tab" data-toggle="tab" href="#annualreport" role="tab" aria-controls="home"
                    aria-selected="true">Annual Report</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="profile-tab" data-toggle="tab" href="#akshayurja" role="tab"
                    aria-controls="profile" aria-selected="false">Akshay Urja</a>
            </li>            
        </ul>
        <div class="tab-content" id="myTabContent">
            <div class="tab-pane fade show active" id="annualreport" role="tabpanel" aria-labelledby="home-tab">
                <div class="accordion" id="accordionExample1">
                    {{#each annualreports}}
                    <div class="card">
                        <div class="card-header" id="headingOne">
                            <h2 class="mb-0">
                                <button class="btn btn-link" type="button" data-toggle="collapse"
                                    data-target="#collapse_ann{{@index}}" aria-expanded="true" aria-controls="collapseOne">
                                    {{this.title}}
                                </button>
                            </h2>
                        </div>
                        <div id="collapse_ann{{@index}}" class="collapse" aria-labelledby="headingOne"
                            data-parent="#accordionExample1">
                            <div class="card-body">
                                <p>{{this.description}}</p>

                                <div class="_pdf_links">
                                    <div class="_pdf_links_inner">
                                        <p>English</p>
                                        <a target="_blank" href="{{../document_path}}{{this.file.url}}" class="ml-1">
                                            <img class="pdf" src="{{../site_url}}/img/view-pdf.png" alt="view">
                                        </a>
                                        <a data-href="{{../document_path}}{{this.file.url}}" class="ml-1 download_file">
                                            <img class="pdf" src="{{../site_url}}/img/download-pdf.png" alt="view">
                                        </a>
                                    </div>
                                    {{#if this.pdfhindi}}
                                    <div class="_pdf_links_inner">
                                        <p>Hindi</p>
                                        <a target="_blank" href="{{../document_path}}{{this.pdfhindi.url}}"
                                            class="ml-1">
                                            <img class="pdf" src="{{../site_url}}/img/view-pdf.png" alt="view">
                                        </a>
                                        <a data-href="{{../document_path}}{{this.pdfhindi.url}}"
                                            class="ml-1 download_file">
                                            <img class="pdf" src="{{../site_url}}/img/download-pdf.png" alt="view">
                                        </a>
                                    </div>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
            <div class="tab-pane" id="akshayurja" role="tabpanel" aria-labelledby="home-tab">
                <div class="accordion" id="accordionExample">
                    {{#each articles}}
                    <div class="card">
                        <div class="card-header" id="headingOne">
                            <h2 class="mb-0">
                                <button class="btn btn-link" type="button" data-toggle="collapse"
                                    data-target="#collapse_{{@index}}" aria-expanded="true" aria-controls="collapseOne">
                                    {{this.title}}
                                </button>
                            </h2>
                        </div>
                        <div id="collapse_{{@index}}" class="collapse" aria-labelledby="headingOne"
                            data-parent="#accordionExample">
                            <div class="card-body">
                                <p>{{this.description}}</p>

                                <div class="_pdf_links">
                                    <div class="_pdf_links_inner">
                                        <p>English</p>
                                        <a target="_blank" href="{{../document_path}}{{this.file.url}}" class="ml-1">
                                            <img class="pdf" src="{{../site_url}}/img/view-pdf.png" alt="view">
                                        </a>
                                        <a data-href="{{../document_path}}{{this.file.url}}" class="ml-1 download_file">
                                            <img class="pdf" src="{{../site_url}}/img/download-pdf.png" alt="view">
                                        </a>
                                    </div>
                                    {{#if this.pdfhindi}}
                                    <div class="_pdf_links_inner">
                                        <p>Hindi</p>
                                        <a target="_blank" href="{{../document_path}}{{this.pdfhindi.url}}"
                                            class="ml-1">
                                            <img class="pdf" src="{{../site_url}}/img/view-pdf.png" alt="view">
                                        </a>
                                        <a data-href="{{../document_path}}{{this.pdfhindi.url}}"
                                            class="ml-1 download_file">
                                            <img class="pdf" src="{{../site_url}}/img/download-pdf.png" alt="view">
                                        </a>
                                    </div>
                                    {{/if}}
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>            
        </div>
    </div>
    {{else}}
    <div class="col-sm-12">
        <h1 class="text-center mt-4 mb-4">No Documents Found</h1>
    </div>
    {{/if}}
    <!-- Accordion -->
</div>