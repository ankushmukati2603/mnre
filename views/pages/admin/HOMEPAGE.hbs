{{> language_dom}}

<div class="_wrapper _admin_wrapper">
    <div class="_section_wrap">
        <div class="_page_head">
            <p>
                <i>
                    <img src="/img/icons/admin/home.png" alt="" />
                </i>
                <span>Homepage</span>
            </p>
        </div>

        <div class="_links_wrap">
            {{#each elements}}
            {{#if child}}
            <ul class="_links_list">
                {{#each this.child}}
                <li>
                    <p class="_homepage">{{this.heading}}</p>
                    <div class="_action">
                        {{#if this.class}}
                        <span class="{{this.class}} edit_button_text">
                            Edit
                        </span>
                        {{else}}
                        <span class="edit_button_text">
                            Edit
                        </span>
                        {{/if}}
                    </div>
                </li>
                {{/each}}
            </ul>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>


<div class="modal" id="homeBannerElement">
    <div class="modal-background"></div>
    <div class="modal-card main__modal--card">
        <header class="modal-card-head">
            <p class="modal-card-title">Home Banner</p>
            <button class="delete ministryModalClose" aria-label="close"></button>
        </header>

        <section class="modal-card-body">
            <div class="_modal_form _upload_banner_form">
                <form class="form" id="addNewHomeBanner" style="display: flex;flex-wrap:inherit">
                    <input type="hidden" name="_csrf" value="{{csrfToken}}">
                    <div class="_upload_image">
                        <div class="_form_field">
                            <label for="homePageBannerFileElement" class="label">Home Page Banner Image File</label>
                            <input type="file" id="homePageBannerFileElement">
                        </div>
                    </div>
                    <div class="_field_wrap">
                        <div class="_form_field">
                            <label for="homePageBannerTitle" class="label">Home Page Banner Title</label>
                            <input type="text" id="homePageBannerTitle" name="homePageBannerTitle" class="input"
                                placeholder="Enter Text">
                        </div>
                        <div class="_form_field">
                            <label for="homePageBannerDescription" class="label">Home Page Banner Description</label>
                            <input id="homePageBannerDescription" name="homePageBannerDescription" class="input"
                                placeholder="Enter Text">
                        </div>
                        <div class="_form_field">
                            <label for="homePageBannerButtonColor" class="label">Home Page Banner Button Color</label>
                            <input type="text" id="homePageBannerButtonColor" name="homePageBannerButtonColor"
                                class="input" placeholder="Enter Text">
                        </div>
                        <div class="_form_field">
                            <label for="homePageBannerButtonText" class="label">Home Page Banner Button Text</label>
                            <input type="text" id="homePageBannerButtonText" name="homePageBannerButtonText"
                                class="input" placeholder="Enter Text">
                        </div>
                        <div class="_form_field">
                            <label for="homePageBannerButtonLink" class="label">Home Page Banner Button Link</label>
                            <input type="text" id="homePageBannerButtonLink" name="homePageBannerButtonLink"
                                class="input" placeholder="Enter Text">
                        </div>
                        <div class="_form_field">
                            <button class="homePageBannerSectionSave">Add Banner</button>
                        </div>
                    </div>
                </form>
            </div>

            <div class="_added_banners">
                <p class="_heading">Already Added Banner</p>
            </div>
        </section>
        {{!-- <footer class="modal-card-foot">
            <button class="button is-success homePageBannerSectionSave">Save changes</button>
            <button class="button ministryModalClose">Cancel</button>
        </footer> --}}
    </div>
</div>

