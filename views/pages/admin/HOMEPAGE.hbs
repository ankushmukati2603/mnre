<script>
    $(document).ready(function () {
        $('.edit_button_text').click(function () {
            setTimeout(function () {
                if ($('.modal').hasClass('is-active')) {
                    $('body, html').css('overflow', 'hidden')
                } else {
                    $('body, html').css('overflow-y', 'auto')
                }
            }, 500)
        });
    })        
</script>