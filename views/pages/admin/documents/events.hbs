<style>
    .admin_edit_content {
        height: 100%;
        overflow: hidden;
        padding-top: 24px;
    }

    .editPage_section_list {
        padding-bottom: 0px;
    }
</style>
{{> language_dom}}


<div class="_wrapper _admin_wrapper">
    <div class="_section_wrap _energy_list">
        <div class="_table_listings">
            <div class="_top">
                <p class="_head">{{heading}}</p>
                <a class="button" href="javascript:void(0)" onclick="_eventsModal('{{form}}Modal','{{form}}')">Add New
                    Listing</a>
            </div>

            <table id="table_id" class="display">
                <thead>
                    <tr>
                        <th>Index</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td>#</td>
                        <td>{{this.title}}</td>
                        <td>{{this.content}}</td>
                        <td>{{this.meta_keywords}}</td>
                        <td>
                            <button onclick="_getEventById('{{this._id}}','eventsModal')">Edit</button>
                            <button onclick="_removeEventById('{{this._id}}')">Delete</button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>


<div class="modal" id="{{form}}Modal">
    <div class="modal-background"></div>
    <div class="modal-card main__modal--card">
        <header class="modal-card-head">
            <button class="delete" onclick="_closeModal('{{form}}Modal')" aria-label="close"></button>
        </header>
        <section class="modal-card-body">
            <div class="_modal_form">
                <div class="form">
                    <form name="_{{form}}_form" id="_{{form}}_form" class="_schemes_form">
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">
                        <input type="hidden" value="add" id="_action_mode" name="_action_mode">
                        <div class="_form_field">
                            <label>Title :</label>
                            <input type="text" placeholder="Type your title here..." name="_title" class="input"
                                id="_title"></textarea>
                        </div>
                        <div class="_form_field">
                            <label>Title (Hindi):</label>
                            <input type="text" name="_title_hi" class="input" id="_title_hi"></textarea>
                        </div>
                        <div class="_form_field">
                            <label>Publish date :</label>
                            <input type="text" placeholder="Type your title here..." name="_issue_date" class="input"
                                id="_issue_date"></textarea>
                        </div>
                        <div class="_form_field">
                            <label>Brief :</label>
                            <textarea name="_short_content" id="_short_content" cols="30" rows="5"></textarea>
                        </div>
                        <div class="_form_field">
                            <label>Content :</label>
                            <textarea name="_content" id="_content" cols="30" rows="5"></textarea>
                        </div>
                        <div class="_form_field">
                            <label>Content (Hindi):</label>
                            <textarea name="_content_hi" id="_content_hi" cols="30" rows="5"></textarea>
                        </div>
                        <div class="_form_field ">
                            <label>Meta Keywords :</label>
                            <textarea name="_meta_keywords" id="_meta_keywords" cols="30" rows="5"></textarea>
                        </div>
                        <div class="_form_field">
                            <label>Category :</label>
                            <select class="_location_drop" id="_category" name="_category">
                                <option value="">Choose Year</option>
                                <option value="All">All</option>
                                <option value="Solar">Solar</option>
                                <option value="Wind">Wind</option>
                                <option value="Small Hydro">Small Hydro</option>
                                <option value="Waste to Energy">Waste to Energy</option>
                                <option value="Bio Energy">Bio Energy</option>
                                <option value="Green Energy Corridor">Green Energy Corridor</option>
                                <option value="Fuel Cells">Fuel Cells</option>
                                <option value="Hydrogen Energy">Hydrogen Energy</option>
                                <option value="Battery Operated Vehicles">Battery Operated Vehicles</option>
                                <option value="Geo-thermal Energy">Geo-thermal Energy</option>
                                <option value="Bio Fuels">Bio Fuels</option>
                                <option value="Ocean Energy">Ocean Energy</option>
                                <option value="Energy Storage">Energy Storage</option>
                            </select>
                        </div>
                        <div class="_form_field">
                            <label>Author:</label>
                            <input type="text" name="_author" class="input" id="_author"></textarea>
                        </div>
                        <div class="_form_field">
                            <label>Ordering (Default is 0):</label>
                            <input type="text" placeholder="Default Order : 0" value="0" name="_ordering" class="input"
                                id="_ordering" />
                        </div>

                        <div class="_upload_image _file">
                            <div class="_form_field">
                                <label for="_eventsFileMain" class="label">File (Main) :</label>
                                <input type="file" id="_eventsFileMain">
                                <input type="hidden" name="_file" />
                            </div>
                            <div class="_show_uploaded">

                            </div>
                            {{#if (ifEquals access "super-admin")}}
                            <div class="_reviewed_box">

                            </div>
                            {{/if}}
                        </div>

                        <div class="_upload_image _thumbnail">
                            <div class="_form_field">
                                <label for="_eventsFileThumb" class="label">File (Thumbnail) :</label>
                                <input type="file" id="_eventsFileThumb">
                                <input type="hidden" name="_thumbnail" />
                            </div>
                            <div class="_show_uploaded">

                            </div>
                            {{#if (ifEquals access "super-admin")}}
                            <div class="_reviewed_box">

                            </div>
                            {{/if}}
                        </div>

                        <footer class="modal-card-foot">
                            <button class="button is-success _saveData">Save changes</button>
                        </footer>

                    </form>
                </div>
            </div>
        </section>
    </div>
</div>