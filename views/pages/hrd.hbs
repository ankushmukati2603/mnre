<style>
    .card-body.hrd {
        font-size: 1rem;
    }

    main.ml-5.mr-5.hrd-text {
        margin-left: 4rem !important;
        margin-right: 4rem !important;
    }
</style>

<div class="_page_head {{head_bg}}">
    <p class="_heading">HUMAN RESOURCE DEVELOPMENT</p>
</div>

<main class="_page_wrapper">
    <div class="_page_heading">
        <p>HRD Policy of the Ministry</p>
    </div>
    <div class="margin_boo">
        {{{OVERVIEW}}}
    </div>
    <div class="_documents_wrap">
        <p class="_documents_heading">
            {{documentTitle}}
        </p>
        {{#if articles}}
        <!-- Accordion -->
        <div class="_policy_wrapper">
            <div class="_policy_accordion">
                <div class="accordion" id="accordionExample">
                    {{#each articles}}
                    <div class="card">
                        <div class="card-header" id="headingOne">
                            <h2 class="mb-0">
                                <button class="btn btn-link english_title" type="button" data-toggle="collapse"
                                    data-target="#collapse_{{@index}}" aria-expanded="true" aria-controls="collapseOne">
                                    {{this.title}}
                                </button>
                                <button class="btn btn-link hindi_title" type="button" data-toggle="collapse"
                                    data-target="#collapse_{{@index}}" aria-expanded="true" aria-controls="collapseOne">
                                    {{this.title_hi}}
                                </button>
                            </h2>
                        </div>

                        <div id="collapse_{{@index}}" class="collapse" aria-labelledby="headingOne"
                            data-parent="#accordionExample">
                            <div class="card-body">
                                <p class="english_title">{{this.description}}</p>
                                <p class="hindi_title">{{this.description_hi}}</p>
                                <div class="_pdf_links">
                                    <a target="_blank" href="{{../document_path}}{{this.file.url}}" class="ml-1">
                                        <img class="pdf" src="/img/view-pdf.png" alt="view">
                                    </a>
                                    <a data-href="{{../document_path}}{{this.file.url}}" class="ml-1 download_file">
                                        <img class="pdf" src="/img/download-pdf.png" alt="view">
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
        {{else}}
        <p class="_no_documents">
            <img src="/img/document.png" alt=""/>
            <span>No Documents Found</span>
        </p>
        {{/if}}
    </div>
</main>

<script>
    var lang = '{{language}}';
    if(lang === 'EN'){
        $('.english_title').show();
        $('.hindi_title').hide();
    } else {
        $('.english_title').hide();
        $('.hindi_title').show();
    }
</script>