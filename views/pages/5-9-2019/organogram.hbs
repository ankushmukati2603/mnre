<script>
    var all_elements = $('.ministry_people_single')
    const FILTER = function (value) {
        if (value != "all") {
            all_elements.hide()
            $('.ministry_people_single').filter(`[data-desig="${value}"]`).show()
        } else {
            all_elements.show()
        }

    }

    const OPEN_ORGANOGRAM_MODAL = function (id) {
        console.log(id)
        axios.get(`http://10.246.24.71/organograms/${id}`).then(response => response.data).catch(error => {
            console.log(error)
        }).then(data => {
            console.log(data)
            $('.content.organogram').html('')
            if (data.image) {
                $('.content_organogram').html(`
                <div class="row">
                    <h2 class="_name">${data.name}</h4>
                    {{!-- <div class="col-12 off_img">
                        <img src="http://10.246.24.71${data.image.url}" width="100%" height="400px" alt="" class="img-fluid">
                    </div> --}}
                    <p class="_designation">${data.designation}</p>
                    <div class="col-4 off_email">
                        <label for="official_email-${data.id}" class="label">
                            <h6>Email</h6>
                        </label>
                        <a id="official_email-${data.id}" href="mailto:${data.email}">
                            <h6 class="font-weight-normal">${data.email}</h6>
                        </a>
                    </div>
                    <div class="col-4 off_res">
                        <label for="official_residence-${data.id}" class="label">
                            <h6>Residence</h6>
                        </label>
                        <a id="official_residence-${data.id}" href="tel:${data.phone_residence}">
                            <h6 class="font-weight-normal">${data.phone_residence}</h6>
                        </a>
                    </div>
                    <div class="col-4 off_off">
                        <label for="official_off-${data.id}" class="label">
                            <h6>Office</h6>
                        </label>
                        <a id="official_off-${data.id}" href="tel:${data.phone_office}">
                            <h6 class="font-weight-normal">${data.phone_office}</h6>
                        </a>
                    </div>
                    <div class="col-12 off_prog">
                        <div class="content">
                            <div class="margin_boo">
                                ${data.programmes}
                            </div>
                        </div>
                    </div>
                </div>
            `)
            } else {
                $('.content_organogram').html(`
                    <div class="_modal_inner">
                        <h2 class="_name">${data.name}</h4>
                        <p class="_designation">${data.designation}</p>
                        <ul>
                            <li>
                                <span>Email:</span>
                                <a id="official_email-${data.id}" href="mailto:${data.email}">
                                    ${data.email}
                                </a>
                            </li>
                            <li>
                                <span>Residence:</span>
                                <a id="official_residence-${data.id}" href="tel:${data.phone_residence}">
                                    ${data.phone_residence}
                                </a>
                            </li>
                            <li>
                                <span>Office:</span>
                                <a id="official_off-${data.id}" href="tel:${data.phone_office}">
                                    ${data.phone_office}
                                </a>
                            </li>
                        </ul>
                        <div class="_departments">
                            ${data.programmes}
                        </div>
                    </div>
            `)
            }


            if (!data.email) { $('.off_email').hide() }

            if (!data.phone_residence) { $('.off_res').hide() }

            if (!data.phone_office) {
                $('.off_off').hide()
            }

            if (!data.programmes) {
                $('.off_prog').hide()
            }

            modal10.style.display = "block";
        })

    }
    // Get the modal
    var modal10 = document.getElementById('organogram_modal');

    // Get the <span> element that closes the modal
    var span10 = document.getElementById("close_organogram_modal");


    // When the user clicks on <span> (x), close the modal
    span10.onclick = function () {
        modal10.style.display = "none"
    }

    // When the user clicks anywhere outside of the modal, close it
    window.onclick = function (event) {
        if (event.target == modal10) {
            modal10.style.display = "none";
        }
    }

    $('.ministry_people_single:lt(2)').removeClass('col-sm-4')
    $('.ministry_people_single:lt(2)').addClass('col-sm-6')

    $('#wambam').val('all')

</script>