    <!-- Accordion -->
    <div class="_policy_accordion">
        <div class="accordion" id="accordionExample">
            {{#if articles}}
            {{#each articles}}
            <div class="card">
                <div class="card-header" id="headingOne">
                    <h2 class="mb-0">
                        <button class="btn btn-link" type="button" data-toggle="collapse"
                            data-target="#collapse_{{@index}}" aria-expanded="true" aria-controls="collapseOne">
                            {{this.title}}
                        </button>
                    </h2>
                </div>
                <div id="collapse_{{@index}}" class="collapse" aria-labelledby="headingOne"
                    data-parent="#accordionExample">
                    <div class="card-body">
                        <p>{{this.description}}</p>

                        <div class="_pdf_links">
                            <a target="_blank" href="http://10.246.24.71/{{this.file.url}}" class="ml-1">
                                <img class="pdf" src="/img/view-pdf.png" alt="view">
                            </a>
                            <a data-href="http://10.246.24.71/{{this.file.url}}" class="ml-1 download_file">
