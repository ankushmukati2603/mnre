<style>
  .MsoNormalTable, .MsoTableGrid{width: 100% !important;}
</style>

<div class="_page_head {{banner_background}}">
    <p class="_heading">Small-Hydro Schemes</p>
</div>

<div class="_page_wrapper">
    <div class="_policy_wrapper">
        <!-- Accordion -->
        <div class="_policy_accordion">
            <ul class="nav nav-tabs hydro-tabs" id="myTab" role="tablist">
                {{!-- <li class="nav-item">
                    <a class="nav-link active" id="profile-tab" data-toggle="tab" href="#home" role="tab"
                        aria-controls="profile" aria-selected="false">Schemes</a>
                </li> --}}
                <li class="nav-item" style="width: 100%;">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="home"
                        aria-selected="true">Schemes</a>
                </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                {{!-- <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab"></div> --}}
                <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <div class="accordion" id="accordionExample">
                        {{#each schemes}}
                            <div class="card">
                                <div class="card-header" id="headingOne">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link" type="button" data-toggle="collapse"
                                            data-target="#collapse_{{@index}}" aria-expanded="true" aria-controls="collapseOne">
                                            {{this.title}}
                                        </button>
                                    </h2>
                                </div>

                                <div id="collapse_{{@index}}" class="collapse" aria-labelledby="headingOne"
                                    data-parent="#accordionExample">
                                    <div class="card-body">
                                        {{{this.content}}}                                        
                                    </div>
                                </div>
                            </div>  
                        {{/each}}  
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{#if article}}
<div class="container">
  <div class="row">
    <div class="col-sm-12 mt-3">
      <h2 class="energtext text-center">Related Documents</h2>
    </div>
  </div>
</div>
<div class="container">
  {{#each article}}
  <div class="row pdf ml-5 mr-5 mt-5">
    <div class="col-sm-2 viewdoc">
      <a href="http://10.246.24.71{{this.file.url}}" class="ml-5"><img class="pdfscheme"
          src="/img/view-pdf.png"></a>
    </div>
    <div class="col-sm-10">
      <span class="date issue_date">{{this.issue_date}}</span>
      <h4 class="guideh">{{this.title}}</h4>
	<p>{{this.description}}</p>
    </div>
	
  </div>
  {{/each}}
</div>
{{/if}}