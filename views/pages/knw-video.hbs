<style>
    .article{width: 80%; margin: auto;}
</style>

<div class="_page_head knowledge_center_bg">
    <p class="_heading">{{page_title}}</p>
</div>

{{#if overview}}
<div class="container-fluid">
    <div class="hdpart">
        <div class="col-sm-12 mt-3">
            <div class="margin_boo">
                {{{overview}}}
            </div>
        </div>
    </div>
</div>
{{/if}}
<div class="_policy_wrapper _knowledge_dropdown">
    <div class="_policy_dropdown">
        <div class="search-option">
            <p style="font-family: 'Gotham-Bold'; right: 100px; font-size: 14px; color: #464646; position: absolute; top: 1px; left: 1px; pointer-events: none; margin: 0; background: white; bottom: 1px; padding: 9px 15px; z-index: 10;">{{page_title}}</p>
            <label for="f184318d184322" class="sr-only">Format</label>
            <select title="Format" id="f184318d184322" name="documentType_" class="form-control"
                onChange="window.location.href=this.value">
                <option value="">Choose Option</option>
                <option value="{{site_url}}/knowledge-center/reports">Reports</option>
                <option value="{{site_url}}/knowledge-center/publication">Publications</option>
                <option value="{{site_url}}/knowledge-center/articles">Articles</option>
                <option value="{{site_url}}/knowledge-center/videos">Videos</option>
                <option value="{{site_url}}/knowledge-center/images">Images</option>
                <option value="{{site_url}}/knowledge-center/infographics">Infographics</option>
                <option value="{{site_url}}/knowledge-center/presentations">Presentations</option>
                {{!-- <option value="/knowledge-center/training">Training Module</option>                    
                    <option value="/knowledge-center/case-studies">Case Studies</option>--}}
            </select>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="_video">
        <div class="_video_parent">
            {{#if videos}}
                {{#each videos}}
                <div class="_video_wrap">
                    <a target="_blank" href="{{../document_path}}{{this.file.url}}">                        
                        <div class="_video_thumb">
                            <img src="{{../site_url}}/img/icons/play.png" alt="" class="_play_img"/>
                            <img src="{{../document_path}}{{this.thumbnail.url}}" alt="" class="_thumb_img"/>
                        </div>
                        <p class="_title">{{this.title}}</p>                    
                    </a>
                </div>
                {{/each}}
            {{else}}
            <div class="col-sm-12">
                <h1 class="text-center mt-4">No Videos Found</h1>
            </div>
            {{/if}}
        </div>
    </div>
</div>