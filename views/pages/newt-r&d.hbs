<div class="_page_head {{head_bg}}">
    <p class="_heading">Documents</p>
</div>

<div class="_main_wrapper">
    <div class="_policy_wrapper">
        <div class="_policy_dropdown">
            <div class="search-option">
                <p style="font-family: 'Gotham-Bold'; right: 100px; font-size: 14px; color: #464646; position: absolute; top: 1px; left: 1px; pointer-events: none; margin: 0; background: white; bottom: 1px; padding: 9px 15px; z-index: 10;">{{page_name}}</p>
                <label for="f184318d184322" class="sr-only">Format</label>
                <select title="Format" id="f184318d184322" class="form-control policy_option"
                    onChange="window.location.pathname = this.value">
                    <option title="Solar" value="/research-and-development/solar">Solar</option>
                    <option title="Wind" value="/research-and-development/wind">Wind</option>
                    <option title="Small Hydro" value="/research-and-development/small-hydro">Small Hydro</option>
                    <option title="Waste To Energy" value="/research-and-development/waste-to-energy">Waste to Energy</option>
                    <option title="Bio Energy" value="/research-and-development/bio-energy">Bio Energy</option>
                </select>
            </div>
        </div>
    </div>
    <div class="_page_wrapper">
        <div class="margin_boo">
            {{{overview}}}
        </div>
        <div class="_documents_wrap">
            <p class="_documents_heading">
              Documents
            </p>

            {{#if articles}}
            <!-- Accordion -->
            <div class="_policy_wrapper">
                <div class="_policy_accordion">
                    <div class="accordion" id="accordionExample">
                        {{#each articles}}
                        <div class="card">
                            <div class="card-header" id="headingOne">
                                <h2 class="mb-0">
                                    <button class="btn btn-link" type="button" data-toggle="collapse"
                                        data-target="#collapse_{{@index}}" aria-expanded="true" aria-controls="collapseOne">
                                        {{this.title}}
                                    </button>
                                </h2>
                            </div>

                            <div id="collapse_{{@index}}" class="collapse" aria-labelledby="headingOne"
                                data-parent="#accordionExample">
                                <div class="card-body">
                                    <p>{{this.description}}</p>
                                    <div class="_pdf_links">
                                        <a target="_blank" href="{{../site_url}}{{this.url}}" class="ml-1">
                                            <img class="pdf" src="{{../site_url}}/img/view-pdf.png" alt="view">
                                        </a>
                                        <a data-href="{{../site_url}}{{this.url}}" class="ml-1 download_file">
                                            <img class="pdf" src="{{../site_url}}/img/download-pdf.png" alt="view">
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>
            <!-- Accordion -->
            {{/if}}
        </div>
    </div>
</div>
<script>
    var page = decodeURI(location.pathname).split('/')[1]
    console.log(page)
    if (page == "Solar") {
        $('.policy_option').val('/research-and-development/solar')
    } else if (page == "Wind") {
        $('.policy_option').val('/research-and-development/wind')
    } else if (page == "Small Hydro") {
        $('.policy_option').val('/research-and-development/small-hydro')
    } else if (page == "Waste To Energy") {
        $('.policy_option').val('/research-and-development/waste-to-energy')
    } else if (page == "Bio Energy") {
        $('.policy_option').val('/research-and-development/bio-energy')
    }
</script>