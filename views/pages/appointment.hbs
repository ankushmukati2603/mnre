<style>
    .appn {
        background: #52699E;
        padding: 15px;
    }

    h1.appn {
        text-transform: uppercase;
        color: #ffffff;

    }
</style>
<div class="container-fluid appn">
    <h1 class="text-center appn">Schedule an Appointment</h1>

</div>
<main class="mr-5 ml-5">
    <form>
        <!-- Sign up card -->


        <div class="row">
            <div class="col-md-6" style="padding=0.5em;">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title bap">Visitor Details</h2>
                        <div class="form-group">
                            <label for="name" class="col-form-label">Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Full Name" required>
                            <div class="email-feedback">

                            </div>
                        </div>
                        <div class="form-group">
                            <label for="name" class="col-form-label">Address</label>
                            <input type="text" class="form-control" id="name" placeholder="Max 120 Character" required>
                            <div class="email-feedback">

                            </div>
                        </div>

                        <div class="form-row">
                            <div class="col">
                                <label for="ex1">Gender</label>
                                <input class="form-control" id="ex1" type="text">
                            </div>
                            <div class="col">
                                <label for="ex2">Age</label>
                                <input class="form-control" id="ex2" type="text">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="name" class="col-form-label">Father/Husband Name (optional)</label>
                            <input type="text" class="form-control" id="name" placeholder="Enter your father's name"
                                required>
                            <div class="email-feedback">

                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Identity Proof</label>
                                <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                                    <option selected>Choose...</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
                            <div class="col">
                                <label for="ex2">.</label>
                                <input class="form-control" id="ex2" type="text">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="col">
                                <label for="ex1">Email</label>
                                <input class="form-control" id="ex1" type="text">
                            </div>
                            <div class="col">
                                <label for="ex2">Mobile Number</label>
                                <input class="form-control" id="ex2" type="text">
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title bap">To Meet</h2>
                        <div class="form-group">
                            <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Bhawan/Building</label>
                            <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                                <option selected>Choose...</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>


                        </div>
                        <div class="form-group">
                            <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Authority Office</label>
                            <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                                <option selected>Choose...</option>
                                <option value="1">One</option>
                                <option value="2">Two</option>
                                <option value="3">Three</option>
                            </select>
                        </div>
                        <div class="form-group">Officer's Name</label>
                            <input type="text" class="form-control" id="name" placeholder="Officer's name" required>

                        </div>
                        <div class="form-row">
                            <div class="col">
                                <label class="my-1 mr-2" for="inlineFormCustomSelectPref">Visit Type</label>
                                <select class="custom-select my-1 mr-sm-2" id="inlineFormCustomSelectPref">
                                    <option selected>Choose...</option>
                                    <option value="1">One</option>
                                    <option value="2">Two</option>
                                    <option value="3">Three</option>
                                </select>
                            </div>
                            <div class="col">
                                <label for="ex2">Additional Visitor</label>
                                <input class="form-control" id="ex2" type="text">
                            </div>
                        </div>
                        <div class="form-group pmd-textfield pmd-textfield-floating-label">
                            <label class="control-label" for="datetimepicker-default">Select Date and Time</label>
                            <input type="text" id="datetimepicker-default" class="form-control" />
                        </div>
                        <div class="form-group">Purpose</label>
                            <input type="text" class="form-control" id="name" placeholder="Max 100 character's"
                                required>

                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="text-center" style="margin-top: 1em;margin-bottom:100px;">
            <button type="button" class="btn btn-primary btn-lg bap text-center">Submit</button>
        </div>
    </form>
</main>
<script>
    // Default date and time picker
    $('#datetimepicker-default').datetimepicker();
</script>